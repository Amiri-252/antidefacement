# Security
# IMPORTANT: Generate a strong random secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_IN_PRODUCTION

# Database Configuration
# Choose one of the following database configurations:

# Option 1: SQLite (Default - for development)
DATABASE_URL=sqlite:///antidefacement.db

# Option 2: MySQL (Recommended for production)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/antidefacement
# Example: DATABASE_URL=mysql+pymysql://antidef_user:your_secure_password@localhost:3306/antidefacement

# Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Redis (Optional - for advanced features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
